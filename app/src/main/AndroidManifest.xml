<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.EHR"
        tools:targetApi="31">
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:label="@string/title_activity_admin"
            android:theme="@style/Theme.EHR.NoActionBar" />
        <activity
            android:name=".InsuranceActivity"
            android:exported="false"
            android:label="@string/title_activity_insurance"
            android:theme="@style/Theme.EHR.NoActionBar" />
        <activity
            android:name=".LaboratoryActivity"
            android:exported="false"
            android:label="@string/title_activity_laboratory"
            android:theme="@style/Theme.EHR.NoActionBar" />
        <activity
            android:name=".PatientActivity"
            android:exported="false"
            android:label="@string/title_activity_patient"
            android:theme="@style/Theme.EHR.NoActionBar" />
        <activity
            android:name=".PharmacyActivity"
            android:exported="false"
            android:label="@string/title_activity_pharmacy"
            android:theme="@style/Theme.EHR.NoActionBar" />
        <activity
            android:name=".ProviderActivity"
            android:exported="false"
            android:label="@string/title_activity_provider"
            android:theme="@style/Theme.EHR.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>